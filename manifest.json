{
  "manifest_version": 2,
  "name": "The Guardian",
  "version": "1.0",
  "description": "Shows a safety indicator icon for websites in the URL bar",
  "permissions": [
    "activeTab",
    "tabs",
    "*://*/*",
    "storage",
    "https://raw.githubusercontent.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "16": "icons/unknown/unknown-16.png",
      "32": "icons/unknown/unknown-32.png",
      "48": "icons/unknown/unknown-48.png",
      "128": "icons/unknown/unknown-128.png"
    },
    "default_title": "Website Safety Status"
  },
  "icons": {
    "16": "icons/extension/knight-16.png",
    "32": "icons/extension/knight-32.png",
    "48": "icons/extension/knight-48.png",
    "128": "icons/extension/knight-128.png"
  }
}